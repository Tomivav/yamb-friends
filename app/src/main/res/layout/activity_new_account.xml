<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.plazonic.tomislav.yambfriends.NewAccountActivity">

    <TextView
        android:id="@+id/new_account_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/new_account_title"/>

    <EditText
        android:id="@+id/new_account_username"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/new_account_title"
        android:layout_centerInParent="true"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:imeOptions="actionNext"
        android:hint="@string/new_account_username_hint"/>

    <EditText
        android:id="@+id/new_account_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/new_account_username"
        android:layout_centerInParent="true"
        android:inputType="textVisiblePassword"
        android:imeOptions="actionDone"
        android:hint="@string/new_account_password_hint"/>

    <Button
        android:id="@+id/new_account_create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_account_password"
        android:layout_centerInParent="true"
        android:text="@string/new_account_create_button"
        android:onClick="createNewAccount"/>

</RelativeLayout>
