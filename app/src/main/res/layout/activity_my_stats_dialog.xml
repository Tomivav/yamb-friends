<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dialog_activity_padding"
    android:layout_margin="@dimen/dialog_activity_margin"
    tools:context="com.plazonic.tomislav.yambfriends.MyStatsDialogActivity"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:id="@+id/my_stats_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/title_bottom_margin"
        android:text="@string/my_stats_title"
        android:textSize="@dimen/title_size"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/time_registered_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/time_registered_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_registered_label"
            android:gravity="center"/>

        <TextView
            android:id="@+id/time_registered_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_side_margin"
            android:layout_marginStart="@dimen/default_side_margin"
            android:text="@string/placeholder"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/games_played_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/games_played_label"
