<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.plazonic.tomislav.yambfriends.ProfileActivity"
    android:gravity="center" >

    <Button
        android:id="@+id/capture_an_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capture_an_image_button"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/choose_an_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/capture_an_image_button"
        android:text="@string/choose_an_image_button"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/profile_image_preview_size"
        android:maxWidth="@dimen/profile_image_preview_size"
        android:scaleType="centerInside"
        android:layout_below="@id/choose_an_image_button"
        android:layout_centerInParent="true" />

</RelativeLayout>
