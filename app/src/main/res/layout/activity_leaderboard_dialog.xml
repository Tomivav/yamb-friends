<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dialog_activity_padding"
    android:layout_margin="@dimen/dialog_activity_margin"
    tools:context="com.plazonic.tomislav.yambfriends.LeaderboardDialogActivity"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:id="@+id/leaderboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/title_bottom_margin"
        android:text="@string/leaderboard_title"
        android:textSize="@dimen/title_size"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:gravity="center"/>

    <fragment
        android:id="@+id/leaderboard_fragment"
        android:name="com.plazonic.tomislav.yambfriends.LeaderboardFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
